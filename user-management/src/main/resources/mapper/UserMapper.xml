<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="az.cybernet.usermanagement.repository.UserRepository">

    <resultMap id="UserResultMap" type="az.cybernet.usermanagement.entity.UserEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="taxId" column="tax_id"/>
        <result property="isActive" column="is_active"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>


    <!-- RESTORE USER -->
    <update id="restoreUser" parameterType="String">
        UPDATE users.users
        SET is_active = true,
            updated_at = null
        WHERE tax_id = #{taxId}
    </update>

    <!-- FIND USER BY TAXID -->
    <select id="findUserByTaxId" resultMap="UserResultMap" parameterType="String">
        SELECT
            u.id,
            u.name,
            u.tax_id,
            u.is_active,
            u.created_at,
            u.updated_at
        FROM users.users u
        WHERE u.tax_id = #{taxId}
    </select>

    <!-- SOFT DELETE USER -->
    <update id="deleteUser" parameterType="String">
        UPDATE users.users
        SET is_active = false,
            updated_at = now()
        WHERE tax_id = #{taxId}
    </update>

    <insert id="addUser" parameterType="az.cybernet.usermanagement.entity.UserEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users.users (name, tax_id, is_active, created_at)
        VALUES (#{name}, #{taxId}, true, NOW())
    </insert>

    <update id="updateUser" parameterType="az.cybernet.usermanagement.entity.UserEntity">
        UPDATE users.users
        SET name = #{name},
            updated_at = NOW()
        WHERE tax_id = #{taxId}
    </update>

    <select id="findMaxTaxId" resultType="String">
        SELECT COALESCE(MAX(tax_id), '0') FROM users
    </select>

</mapper>
