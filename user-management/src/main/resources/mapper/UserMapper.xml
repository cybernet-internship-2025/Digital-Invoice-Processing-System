<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="az.cybernet.usermanagement.repository.UserRepository">

    <resultMap id="UserResultMap" type="az.cybernet.usermanagement.entity.UserEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="taxId" column="taxId"/>
        <result property="is_active" column="is_active"/>
        <result property="created_at" column="created_at"/>
        <result property="updated_at" column="updated_at"/>
    </resultMap>

    <!-- RESTORE USER -->
    <update id="restoreUser" parameterType="long">
        UPDATE users.users
        SET is_active = true,
        updated_at = null
        WHERE id = #{id}
    </update>

    <!-- FIND USER BY TAXID -->
    <select id="findUserByTaxId" resultMap="UserResultMap" parameterType="String">
        SELECT
        u.id,
        u.name,
        u.tax_id,
        u.is_active,
        u.created_at,
        u.updated_at
        FROM users.users u
        WHERE u.tax_id = #{taxId}
    </select>


    <!-- SOFT DELETE USER -->
    <update id="deleteUser" parameterType="long">
        UPDATE users.users
        SET is_active = false,
        updated_at = now()
        WHERE id = #{id}
    </update>

</mapper>
